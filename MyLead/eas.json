{
  "cli": {
    "version": ">= 3.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      }
    },
    "apk": {
      "developmentClient": false,
      "distribution": "internal",
      "channel": "apk",
      "android": {
        "buildType": "apk"
      }
    },
    "ios-dev": {
      "developmentClient": false,
      "distribution": "internal",
      "channel": "ios-dev",
      "ios": {
        "buildConfiguration": "Debug"
      }
    },
    "preview": {
      "developmentClient": false,
      "distribution": "internal",
      "channel": "preview"
    },
    "production": {
      "developmentClient": false,
      "distribution": "store",
      "channel": "production",
      "android": {
        "buildType": "app-bundle"
      },
      "ios": {
        "buildConfiguration": "Release"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./service-account-key.json",
        "track": "production"
      },
      "ios": {
        "appleId": "yourappleid@email.com",
        "ascAppId": "your-appstore-connect-id",
        "companyName": "MyLead",
        "sku": "myleadapp"
      }
    }
  }
}
